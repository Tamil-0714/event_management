<!DOCTYPE html>
<html lang="en" class="sl-theme-dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resourse manaagment</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.0/cdn/themes/light.css"
    />

    <script
      type="module"
      src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.0/cdn/shoelace-autoloader.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.0/cdn/themes/dark.css"
    />
    <style>
      body {
        /* background-color: #e8f5e9; */
        font-family: Arial, sans-serif;
      }
      table {
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        background-color: #a5d6a7; /* Green */
        color: #1b5e20; /* Dark Green */
      }
      th,
      td {
        border: 1px solid #2e7d32;
        padding: 10px;
        text-align: left;
      }
      th {
        background-color: #66bb6a;
        color: white;
      }
    </style>
    <link rel="stylesheet" href="/adminStyle.css" />
  </head>
  <body>
    <sl-tab-group placement="top">
      <sl-tab slot="nav" panel="events">Upcoming Events</sl-tab>
      <sl-tab slot="nav" panel="uevents">Events Histroy</sl-tab>
      <sl-tab slot="nav" panel="parispants">Parispations To events</sl-tab>
      <sl-tab slot="nav" panel="logout"
        ><button id="logout-button">Logout</button></sl-tab
      >

      <sl-tab-panel name="events" class="users-container">
        <div class="event-list">
          <% events.forEach(event => { %>
          <div class="event-card">
            <h2><%= event.event_name %></h2>
            <p class="type"><strong>Type:</strong> <%= event.event_type %></p>
            <p class="date"><strong>Date:</strong> <%= event.event_date %></p>
            <p class="organiser">
              <strong>Organiser ID:</strong> <%= event.organiser_id %>
            </p>
            <p class="description"><%= event.description %></p>
          </div>
          <% }); %>
        </div>
      </sl-tab-panel>
      <sl-tab-panel name="uevents"> </sl-tab-panel>
      <sl-tab-panel name="parispants">
        <h2 style="text-align: center; color: #1b5e20">Enrollment Details</h2>

        <table>
          <thead>
            <tr>
              <th>Enroll ID</th>
              <th>Participant Name</th>
              <th>Event Name</th>
              <th>Enrolled Time</th>
            </tr>
          </thead>
          <tbody>
            <% enrollments.forEach(row => { %>
            <tr>
              <td><%= row.enroll_id %></td>
              <td><%= row.partispant_name %></td>
              <td><%= row.event_name %></td>
              <td><%= row.enrolled_time %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </sl-tab-panel>
    </sl-tab-group>
    <!-- <div id="profile-info"></div> -->

    <script src="/adminDashboard.js"></script>
  </body>
</html>
